<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".paneActivity.PaneActivity"
    tools:showIn="@layout/activity_pane">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pane_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="@dimen/tile_margin_horizontal"
        android:paddingRight="@dimen/tile_margin_horizontal"
        android:paddingTop="@dimen/tile_margin_vertical"
        android:paddingBottom="@dimen/tile_margin_vertical"
        android:clipToPadding="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>